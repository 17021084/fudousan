<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/icon/040-home.svg">
    
    <title>Index</title>
    
    
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/HomePage/index.css">
    <!-- bootstrap  -->
    <link rel="stylesheet" href="/javascripts/bootstrap/dist/css/bootstrap.css">
   



</head>
<body>
    <!-- header -->
  <%- include ('../Header.ejs') %> 
   



   <div class="index">

        <div class=HomePostTitle>
            <h1> New Home Post</h1>
                <hr>
        </div>

        <div class="row HomePostRow">
            
           
            <% for( let index = 0; index < end; index++ ) { %>
            
            <!-- Home Block -->
            <div class="col-sm-3 HomeBlock">
               
                <div class="HomeImage">
                   <a href="/homelist/<%= home[index].HomeId %>"> 
                        <img style=" height : 200px ; width:fit-content ;border-radius: 5%;" src="<%= home[index].Image1 %>" class="img-thumbnail" alt="Responsive image">
                   
                    </a>                 
                </div>    

                <div class="HomeName">
                    <a href="/homelist/<%= home[index].HomeId %>"><h4 style="text-align: center;"> <%= home[index].HomeName %> </h4></a>
                </div>
                <div class="HomeLocation">
                    
                    <img class="BigIcon" src="/images/icon/location.svg" alt="Location"> <b> <%= home[index].Address %> </b></img>
                </div>
                
                <div class="HomeOwner" style="margin:8px 0px 8px 0px ;" >
                  
                  <img class="BigIcon" src="/images/icon/owner.svg" alt="HomeOwner"> <i> <%= home[index].FullName %> </i></img>
                </div>

                    <!-- sub infor -->
                <div class="row">
                    <div class="col-sm-6">
                        <div style="margin:8px 0px 8px 0px ;">
                            <img class="BigIcon" src="/images/icon/calendar.svg" alt="calendar"> <b><%= home[index].YearBuilt %></b></img>
                            
                        </div>
                        
                        <div style="margin:8px 0px 8px 0px ;">
                            Purpose <br>
                            <span style="color: red;"><%= home[index].Purpose %> </span>
                        </div>

                    </div>
                    <div class="col-sm-6">
                        <div style="margin:8px 0px 8px 0px ;" >
                            <img class="BigIcon" src="/images/icon/area.svg" alt="area"> <b><%= home[index].Area %></b></img>
                            
                        </div>
                        
                        <div style="margin:8px 0px 8px 0px ;"> 
                            <img class="BigIcon" src="/images/icon/cost.svg" alt="cost"> <b><%= home[index].Price  %>  </b></img>
                           
                        </div>

                    </div>
                </div>    


            </div>
            <!-- /Home Block -->
            <% } %>
           


        </div>

        <div class="pagination">
                <button type="button" class="btn btn-light"> <img src="/images/icon/previous.svg" alt="previous"></button>
                <button type="button" class="btn btn-light"> <img src="/images/icon/next.svg" alt="next"></button>
        </div>

        <div class=NewPostTitle>
            <h1> News  Post</h1>
                <hr>
        </div>

      
        
        
        <div class="row NewsPostRow">
          
            <% for( let index = 0; index < news.length; index++ ) { %>
            
                <!-- News Block -->
            <div class="col-sm-3 NewsBlock">
               
                <div class="NewsImage">
                   <a href="<%= news[index].Image%>"> 
                        <img style=" height : 200px ; width:fit-content ;border-radius: 5%;" src="<%= news[index].Image%> " class="img-thumbnail" alt="Responsive image">
                    </a>                 
                </div>    

                <div class="HomeName">
                    <a href="http://"><h4 style="text-align: center;"><%= news[index].Title%>  </h4></a>
                </div>
                <div class="HomeLocation">
                    
                    <img class="BigIcon" src="/images/icon/location.svg" alt="Location"> <b> <%= news[index].Place%>  </b></img>
                </div>
                
                <div class="HomeOwner" style="margin:8px 0px 8px 0px ;" >                
                    <img class="BigIcon" src="/images/icon/owner.svg" alt="HomeOwner"> <i> <%= news[index].FullName%>  </i></img>
                </div>

                <div class="Time" style="margin:8px 0px 8px 0px ;" >                
                    <img class="BigIcon" src="/images/icon/015-stopwatch.svg" alt="Time"> <i>  <%=  news[index].CreatedDate.toString().slice(0,news[index].CreatedDate.toString().length-35+1) %> </i></img>
                </div>
                           
                 <div class="brief">
                    <%= news[index].Brief%> 
                 </div>
                 <br>
                 <a href="/news/<%=news[index].NewsId%>">See more <br></a>   

            </div>
            <!-- /News Block -->
            
            <% } %>
        </div>
      

   </div>
   


    <!-- footer -->
    <%- include ('../Footer.ejs') %> 
   

    <!-- include jquery and bootstap -->
    <script src="/javascripts/jquery/dist/jquery.js"></script>
    <script src="/javascripts/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>