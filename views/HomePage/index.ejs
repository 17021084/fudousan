<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/icon/040-home.svg">
    
    <title>Index</title>
    
    
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/HomePage/index.css">
    <!-- bootstrap  -->
    <link rel="stylesheet" href="/javascripts/bootstrap/dist/css/bootstrap.css">
   



</head>
<body>
    <!-- header -->
    <%- include ('../Header.ejs',{userInfor:userInfor}) %> 
   



   <div class="index">

        <div class=HomePostTitle>
            <h1>  Home </h1>
                <hr>
        </div>

        <div class="row HomePostRow">
            
           
            <% for( let index = 0; index < home.length; index++ ) { %>
            
            <!-- Home Block -->
            <div class="col-sm-3 HomeBlock">
               
                <div class="HomeImage">
                   <a href="/homelist/<%= home[index].HomeId %>"> 
                        <img style=" height : 200px ; width:fit-content ;border-radius: 5%;" src="<%= home[index].Image1 %>" class="img-thumbnail" alt="Responsive image">
                   
                    </a>                 
                </div>    

                <div class="HomeName">
                    <a href="/homelist/<%= home[index].HomeId %>"><h4 style="text-align: center;"> <%= home[index].HomeName %> </h4></a>
                </div>
                <div class="HomeLocation">
                    
                    <img class="BigIcon" src="/images/icon/location.svg" alt="Location"> <b> <%= home[index].Address %> </b></img>
                </div>
                
                <div class="HomeOwner" style="margin:8px 0px 8px 0px ;" >
                  
                  <img class="BigIcon" src="/images/icon/owner.svg" alt="HomeOwner"> <i> <%= home[index].FullName %> </i></img>
                </div>

                    <!-- sub infor -->
                <div class="row">
                    <div class="col-sm-6">
                        <div style="margin:8px 0px 8px 0px ;">
                            <img class="BigIcon" src="/images/icon/calendar.svg" alt="calendar"> <b><%= home[index].YearBuilt %></b></img>
                            
                        </div>
                        
                        <div style="margin:8px 0px 8px 0px ;">
                            Purpose <br>
                            <span style="color: red;"><%= home[index].Purpose %> </span>
                        </div>

                    </div>
                    <div class="col-sm-6">
                        <div style="margin:8px 0px 8px 0px ;" >
                            <img class="BigIcon" src="/images/icon/area.svg" alt="area"> <b><%= home[index].Area %></b></img>
                            
                        </div>
                        
                        <div style="margin:8px 0px 8px 0px ;"> 
                            <img class="BigIcon" src="/images/icon/cost.svg" alt="cost"> <b><%= home[index].Price  %>  </b></img>
                           
                        </div>

                    </div>
                </div>    


            </div>
            <!-- /Home Block -->
            <% } %>
           


        </div>
        <!-- paginate Home  -->
        <div class="paginate">
            <hr>
            <nav >
                <ul class="pagination">
                        <% if(Current_Home ==0){ %> 
                            <li class="page-item disabled">
                                <span style="color: #9818d6;"  class="page-link">Previous</span>
                            </li>
                        <% }else{ %> 
                            <li class="page-item">
                                <a style="color: #9818d6;"  class="page-link" href="?home=<%=Current_Home-1%>&&news=<%=Current_News%>" >Previous</a>
                            </li>                        
                        <% } %> 
                    
                        <% for( let index = 0; index < NumOfPage_Home; index++ ) { %>
                    
                            <% if( Current_Home === index){ %> 
                                <li class="page-item active">
                                    <a class="page-link" href="?home=<%= Current_Home%>&&news=<%=Current_News%>"><%= Current_Home%></a>
                                </li>                        
                            <% }else{ %> 

                                <li class="page-item">
                                    <a style="color: #9818d6;" class="page-link" href="?home=<%=index%>&&news=<%=Current_News%>"><%=index%></a>
                            </li>
                            <% } %> 
                            
                
                                        
                        <% } %>

                        <% if(Current_Home ==NumOfPage_Home-1 ){ %> 
                            <li class="page-item disabled">
                                <span style="color: #9818d6;"  class="page-link">Next</span>
                            </li>
                        <% }else{ %> 
                            <li class="page-item">
                                <a style="color: #9818d6;"  class="page-link" href="?home=<%=Current_Home+1%>&&news=<%=Current_News%>" >Next</a>
                            </li>                        
                        <% } %> 
                </ul>
            </nav>
        </div>
     <!-- paginate Home --> 
      

        <div class=NewPostTitle>
            <h1> News  </h1>
                <hr>
        </div>

      
        
        
        <div class="row NewsPostRow">
          
            <% for( let index = 0; index < news.length; index++ ) { %>
            
                <!-- News Block -->
            <div class="col-sm-3 NewsBlock">
               
                <div class="NewsImage">
                   <a href="<%= news[index].Image%>"> 
                        <img style=" height : 200px ; width:fit-content ;border-radius: 5%;" src="<%= news[index].Image%> " class="img-thumbnail" alt="Responsive image">
                    </a>                 
                </div>    

                <div class="HomeName">
                    <a href="http://"><h4 style="text-align: center;"><%= news[index].Title%>  </h4></a>
                </div>
                <div class="HomeLocation">
                    
                    <img class="BigIcon" src="/images/icon/location.svg" alt="Location"> <b> <%= news[index].Place%>  </b></img>
                </div>
                
                <div class="HomeOwner" style="margin:8px 0px 8px 0px ;" >                
                    <img class="BigIcon" src="/images/icon/owner.svg" alt="HomeOwner"> <i> <%= news[index].FullName%>  </i></img>
                </div>

                <div class="Time" style="margin:8px 0px 8px 0px ;" >                
                    <img class="BigIcon" src="/images/icon/015-stopwatch.svg" alt="Time"> <i>  <%=  news[index].CreatedDate.toString().slice(0,news[index].CreatedDate.toString().length-35+1) %> </i></img>
                </div>
                           
                 <div class="brief">
                    <%= news[index].Brief%> 
                 </div>
                 <br>
                 <a href="/news/<%=news[index].NewsId%>">See more <br></a>   

            </div>
            <!-- /News Block -->
            
            <% } %>
        </div>
                <!-- paginate News  -->
                <div class="paginate">
                    <hr>
                    <nav >
                        <ul class="pagination">
        
                                <% if(Current_News ==0){ %> 
                                    <li class="page-item disabled">
                                        <span style="color: #9818d6;"  class="page-link">Previous</span>
                                    </li>
                                <% }else{ %> 
                                    <li class="page-item">
                                        <a style="color: #9818d6;"  class="page-link" href="?home=<%= Current_Home%>&&news=<%=Current_News-1%>" >Previous</a>
                                    </li>                        
                                <% } %> 
                            
                                <% for( let index = 0; index < NumOfPage_News; index++ ) { %>
                            
                                    <% if( Current_News === index){ %> 
                                        <li class="page-item active">
                                            <a class="page-link" href="?home=<%= Current_Home%>&&news=<%= Current_News%>"><%= Current_News%></a>
                                        </li>                        
                                    <% }else{ %> 
        
                                        <li class="page-item">
                                            <a style="color: #9818d6;" class="page-link" href="?home=<%= Current_Home%>&&news=<%=index%>"><%=index%></a>
                                    </li>
                                    <% } %> 
                                    
                        
                                                
                                <% } %>
        
                                <% if(Current_News == NumOfPage_News-1 ){ %> 
                                    <li class="page-item disabled">
                                        <span style="color: #9818d6;"  class="page-link">Next</span>
                                    </li>
                                <% }else{ %> 
                                    <li class="page-item">
                                        <a style="color: #9818d6;"  class="page-link" href="?home=<%= Current_Home%>&&news=<%=Current_News+1%>" >Next</a>
                                    </li>                        
                                <% } %> 
                        </ul>
                    </nav>
                </div>
             <!-- paginate News --> 

   </div>
   


    <!-- footer -->
    <%- include ('../Footer.ejs') %> 
   

    <!-- include jquery and bootstap -->
    <script src="/javascripts/jquery/dist/jquery.js"></script>
    <script src="/javascripts/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>