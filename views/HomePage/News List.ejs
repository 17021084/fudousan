<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/icon/040-home.svg">
    
    <title>News List </title>
    
    
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/HomePage/NewList.css">
    <!-- bootstrap  -->
    <link rel="stylesheet" href="/javascripts/bootstrap/dist/css/bootstrap.css">
   



</head>
<body>
    <!-- header -->
    <%- include ('../Header.ejs',{userInfor:userInfor}) %> 


   
   <div class="NewList">
        <div class=NewPostTitle>
            <h1> News  Post</h1>
                <hr>
                <br><br> <br><br>
        </div>
        <% for( let index = 0; index < news.length; index++ ) { %>
        
      
        <div  class="information">
            
            <h3 style="text-align: center;" > <%= news[index].Title%>  </h3>
            <div class="row">

                <div class="col-xl-5">
                    <div class="MainNewsImage">
                        <a href="http://"> 
                             <img style=" height : 300px ; width:fit-content ;border-radius: 5%;" src="<%= news[index].Image%> " class= "img-thumbnail" alt="Responsive image">
                         </a>                 
                     </div>    


                </div>
                <div class="col-xl-7">
                   
                        <div class="Fullbrief">
                            <%= news[index].Brief%>  
        
                         </div>
                        <div class="row">
                            <div class="col-xl-4 HomeLocation">
                    
                                <img class="BigIcon" src="/images/icon/location.svg" alt="Location"> <b style="font-size: smaller;"> <%= news[index].Place%>   </b></img>
                            </div>
                            
                            <div class="col-xl-4 HomeOwner" style="margin:8px 0px 8px 0px ;" >                
                                <img class="BigIcon" src="/images/icon/owner.svg" alt="HomeOwner"> <i style="font-size: smaller;" > <%= news[index].FullName%>   </i></img>
                            </div>
            
                            <div class="col-xl-4 Time" style="margin:8px 0px 8px 0px ;" >                
                                <img class="BigIcon" src="/images/icon/015-stopwatch.svg" alt="Time"> <i style="font-size: smaller;"> 
                                    <%=  news[index].CreatedDate.toString().slice(0,news[index].CreatedDate.toString().length-35+1) %>  
                                    
                                 </i></img>
                            </div>
                        </div>
                        <a style="padding: 0%;" href="/news/<%=news[index].NewsId%>"><button type="button" class="btn btn-warning"> Click Here To See More ...</button></a>
                </div>

            </div>
       
             
        </div>
            <br> <br> <br>
        <% } %>
        <!-- paginate News  -->
        <div class="paginate">
            <hr>
            
            <nav >
                <ul class="pagination">

                        <% if(Current_News ==0){ %> 
                            <li class="page-item disabled">
                                <span style="color: #9818d6;"  class="page-link">Previous</span>
                            </li>
                        <% }else{ %> 
                            <li class="page-item">
                                <a style="color: #9818d6;"  class="page-link" href="?news=<%=Current_News-1%>" >Previous</a>
                            </li>                        
                        <% } %> 
                    
                        <% for( let index = 0; index < NumOfPage_News; index++ ) { %>
                    
                            <% if( Current_News === index){ %> 
                                <li class="page-item active">
                                    <a class="page-link" href="?news=<%= Current_News%>"><%= Current_News%></a>
                                </li>                        
                            <% }else{ %> 

                                <li class="page-item">
                                    <a style="color: #9818d6;" class="page-link" href="?news=<%=index%>"><%=index%></a>
                            </li>
                            <% } %> 
                            
                
                                        
                        <% } %>

                        <% if(Current_News == NumOfPage_News-1 ){ %> 
                            <li class="page-item disabled">
                                <span style="color: #9818d6;"  class="page-link">Next</span>
                            </li>
                        <% }else{ %> 
                            <li class="page-item">
                                <a style="color: #9818d6;"  class="page-link" href="?news=<%=Current_News+1%>" >Next</a>
                            </li>                        
                        <% } %> 
                </ul>
            </nav>
        </div>
     <!-- paginate News --> 

   </div>
   


   <!-- footer -->
   <%- include('../Footer.ejs') %> 


    <!-- include jquery and bootstap -->
    <script src="/javascripts/jquery/dist/jquery.js"></script>
    <script src="/javascripts/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>